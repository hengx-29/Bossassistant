/* pages/delgoodlist/delgoodlist.wxss */
/*删除按钮*/
.viewdel{
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.van-swipe-cell__left,
.van-swipe-cell__right {
  border-radius: 5rpx  !important;
  display: inline-block;
  width: 65px;
  height: 44px;
  font-size: 15px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: #f44;
}
/*扫描*/
.scanning{
  width: 55rpx;
  height: 55rpx;
  line-height: 55rpx;
  vertical-align: middle;
  position: relative;
  top: -4rpx;
}
/*每个商品*/
.goodlist-item{
  background-color: white;
  width: 90%;
  margin:0 auto;
  border-radius: 15rpx;
  padding:20rpx;
  border:1px solid #eee;
  /* margin-top: 30rpx; */
  margin-bottom: 30rpx;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.5);
}
/*商品名称*/
.goodlist-item .barcode text{
  font-size: 1.2em;
  color: red;
}
.goodlist-item .price .purchaseprice{
  font-size: 1.4em;
  color: red;
}
.goodlist-item .price .sellingprice{
  font-size: 1.1em;
}

/*标签*/
.van-tag{
  margin-right: 8rpx;
}
.goodlist-smallitem{
  width: 20rpx;
  height: 55rpx;
  background-color: rgb(255, 52, 69);
  position: absolute;
  top: 37%;
  right: 1%;
  border-radius: 2rpx;
}
/*搜索商品列表：左滑删除*/
.searchtitle{
  margin-bottom: 8rpx;
}
.searchtitle-head{
  font-size: 1.1em;
  padding-left: 20rpx;
}
.searchtitle-foot{
  float: right;
  padding-right: 20rpx;
  /* font-size: 0.9em; */
  vertical-align: middle;
}
.searchtitle-foot-img{
  position: relative;
  top: 5rpx;
}