/* pages/goodlist/goodlist.wxss */
page{
  background-color: ghostwhite;
}
/*标题栏*/
.van-col{
  border:1px solid #eee;
  text-align: center;
  
}

/*修改按钮*/
.viewupdate{
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.van-swipe-cell__left,
.van-swipe-cell__right {
  border-radius: 5rpx  !important;
  display: inline-block;
  width: 65px;
  height: 44px;
  font-size: 15px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: #FF534D;
}
/* .updateform button{
  display: flex;
  flex-direction: row;
  flex: 1;
} */
/*提交按钮样式*/
.submitbtn{
  /*字体颜色*/
  color:#1989fa;
  /*适配距离*/
  position: relative;
  top:2rpx;

  border: none;
  float: right;
  background-color: #fff;
  width: 50%;
  height: 100%;
  /* text-align: center; */
}
/*清除按钮边框*/
.submitbtn::after {
  border: none
}
