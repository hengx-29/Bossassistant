/* pages/purchasemanage/purchasemanage.wxss */
/*采购单列表：左滑删除*/
.searchtitle{
  margin: 20rpx 0;
}
.searchtitle-head{
  font-size: 0.9em;
  padding-left: 20rpx;
}
.searchtitle-foot{
  float: right;
  padding-right: 20rpx;
  padding-top: 5rpx;
  /* font-size: 0.9em; */
  vertical-align: middle;
  font-size: 0.8em;
}
.searchtitle-foot-img{
  position: relative;
  top: 5rpx;
}
/*每条数据*/
.inputLists-item{
  background-color: white;
  width: 90%;
  margin:0 auto;
  border-radius: 15rpx;
  padding:20rpx;
  border:1px solid #eee;
  /* margin-top: 30rpx; */
  margin-bottom: 30rpx;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.5);
}
/*删除按钮*/
.viewdel{
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.van-swipe-cell__left,
.van-swipe-cell__right {
  border-radius: 5rpx  !important;
  display: inline-block;
  width: 65px;
  height: 44px;
  font-size: 15px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: #FF534D;
}
