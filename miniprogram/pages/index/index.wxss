.body-title{
  margin-left: 15rpx;
  padding-bottom: 10rpx;
  background-color: white;
  border-bottom: 2rpx solid #ccc;
  font-size: 0.8em;
  color: gray;
}
.body-bg{
  width: 90vw;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  border-radius: 20rpx;
  z-index: -1;
