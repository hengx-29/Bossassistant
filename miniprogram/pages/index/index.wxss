
/*头部*/
.van-search{
  background-color: #1296db !important;
}
.head-bg-block{
  height: 100rpx;
  border-radius: 0 0 50% 50%;
  background-color: #1296db !important;
}
/*扫描*/
.scanning{
  width: 55rpx;
  height: 55rpx;
  line-height: 55rpx;
