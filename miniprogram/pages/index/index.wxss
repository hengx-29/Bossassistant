.swiper-img{
  /* height: 400rpx; */
  width: 90vw;
  position: relative;
  top: -85rpx;
  margin:0 auto;
  border-radius: 10rpx;
}
.swiper-img image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
/*功能区*/
.body-function{
  border-radius: 20rpx;
  width: 90vw;
  margin: 0 auto;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  /* margin-bottom: 20rpx; */
