/*第一排*/
.one{
  display: flex;
  flex-direction: row;
}
/*序号*/
.indexs{
  flex:30%;
  border-left: 15rpx solid #1296db;
}
/*供货商*/
.ghs{
  flex:70%;
  display: flex;
  flex-direction: row;
}
.ghs input {
  width: 300rpx;
  /* height: 80rpx; */
  border-bottom: 2rpx solid #DDD;
  border-radius: 8rpx;
  padding: 0 22rpx;
  box-sizing: border-box;
}
/*第二排*/
.two{
  margin-top: 70rpx;
  margin-bottom: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
/*条形码*/
.two .barcode{
  flex:38%;
  /* height: 80rpx; */
  border-bottom: 2rpx solid #DDD;
  border-radius: 8rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
}
/**/
.two .scan{
  flex: 8%;
}
/*步进器*/
.two .num{
  flex: 26%;
}
/*进价*/
.two .purchase{
  flex: 30%;
  display: flex;
  flex-direction: row;
}
.two .purchase text{
  float: left;
}
.two .purchase input{
  flex: 50%;
  border-bottom: 2rpx solid #DDD;
  border-radius: 8rpx;
  padding: 0 22rpx;
  box-sizing: border-box;
}
/*第三排*/
.three{
  /* margin-top: 10rpx; */
  /* margin-bottom: 30rpx; */
  display: flex;
  flex-direction: row;
}
/*商品名*/
.three .goodname{
  flex:40%;
  border-bottom: 2rpx solid #DDD;
  border-radius: 8rpx;
  padding: 0 22rpx;
  box-sizing: border-box;
}
/*规格*/
.three .specification{
  flex:30%;
  border-bottom: 2rpx solid #DDD;
  border-radius: 8rpx;
  padding: 0 22rpx;
  box-sizing: border-box;
}
/*小计*/
.three .sell{
  flex:30%;
  text-align: right;
}
/*添加删除按钮*/
.add-del-view{
  display: flex;
  flex-direction: row;
}
.add-del-view button{
  width: 40%;
}
