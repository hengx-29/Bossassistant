.sell-head{
  display: flex;
  flex-direction: row;
  width: 100vw;
  height: 400rpx;
}
.sell-head .sell-left{
  flex: 1;
}
.sell-head .sell-left image{
  width: 400rpx;
  height: 400rpx;
}
.sell-right{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sell-right image{
  width: 300rpx;
  height: 300rpx;
  position: relative;
  top: -25rpx;
}
.sell-right-time{
  float: right;
  padding-right: 2rpx;
  font-size: 25rpx;
  color: rgb(177, 173, 173);
}
/*销售数据分析标题*/
.sell-right-title{
  font-size: 1em;
  /* color: rgb(132, 212, 237); */
