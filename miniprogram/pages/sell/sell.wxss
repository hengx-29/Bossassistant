.sell-items-po{
  position: absolute;
  left: 50%;
  top: 45%;
  transform: translate(-50%,-50%);
}
.sell-items{
  width: 100vw;
  display: flex;
  flex-direction: row;
}
.sell-item{
  display: flex;
  flex-direction:column;
  align-items: center;
  width: 50%;
}
/*上升下降*/
.sell-item .new{
  font-size: 2.3em;
  color: #EB3F2F;
}
.newup{
  width: 40rpx;
  height: 30rpx;
}
.sell-item .old{
  font-size: 2.3em;
  color: #F29F3F;
}
.sell-item text{
  font-size: 0.7em;
  color: rgb(128, 127, 127);
}
