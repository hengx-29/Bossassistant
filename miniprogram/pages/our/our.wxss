/* pages/our/our.wxss */
/*背景图片*/
.bg-view{
  width: 100vw;
  height: 45vh;
}
.bg{
  width: 100%;
  height: 100%;
}
.team-first{
  font-size: 1.1em;
  margin-bottom: 40rpx;
  text-align: center;
}
.teamview{
  display: flex;
  flex-direction: row;
  /* align-items: center; */
}
.teamview view{
  margin-bottom: 100rpx;
}
.item{
  flex: 1;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid #eee;
}
.item image{
  width: 33vw;
  height: 300rpx;
}
.item text{
  position: absolute;
  bottom: 0;
  width: 33vw;
  height: 50rpx;
  line-height: 50rpx;
  background-color: rgba(14, 14, 14, 0.4);
  text-align: center;
  color: white;
  font-size: 0.8em;
}
/*描述文字*/
.contain{
  font-size: 0.8em;
}
/*底部专注数据分析*/
.foot-title{
  margin-top: 60rpx;
  text-align: center;
  font-size: 0.9em;
  background-image: linear-gradient(135deg, deeppink, dodgerblue);
  -webkit-background-clip: text;
  -moz-background-clip: text;
  background-clip: text;
  box-decoration-break: clone;
  -webkit-box-decoration-break: clone;
  -moz-box-decoration-break: clone;
  color: transparent;
}